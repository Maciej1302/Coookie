<MyAccount>
    name:"myaccount"


    GridLayout:
        cols:1
        Label:
            id:user_data_email
            font_size:20
            text:"Your email:"
            size_hint: 0.05, 0.2
            color: 1,1,1,1
        Label:
            id:user_data_password
            font_size:20
            text:"Your password:"
            size_hint: 0.05, 0.2
            color: 1,1,1,1
            password: True

        Button:
            text: "Go Back"
            size_hint: 0.05, 0.2
            font_size: 25
            on_release:
                app.root.current = "option"
                root.manager.transition.direction = "down"
               
        
<SavedRecipes>
    name:"savedrecipes"


    GridLayout:
        cols:1
        Label:
            id:user_saved_recipes
            font_size:20
            text:"Your saved recipes:"
            size_hint: 0.05, 0.2
            background_color: 1,1, 0, 1
        ScrollView:
            Label:
                id:your_saved_recipes
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                text:"Your saved recipes:"
                background_color: 0, 0, 0, 1
        
        Button:
            text: "Refresh your saved recipes"
            size_hint: 0.05, 0.2
            font_size: 25
            on_release:
                root.SavedPress()
               
                

        Button:
            text: "Go Back"
            size_hint: 0.05, 0.2
            font_size: 25
            on_release:
                app.root.current = "option"
                root.manager.transition.direction = "down"         
           
